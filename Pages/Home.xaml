<UserControl x:Class="ModernUINavigationApp.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Control/Debug.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="DEBUG" Source="/Pages/Control/Debug.xaml" />
                <mui:Link DisplayName="PROGRAMS" Source="/Pages/Control/Program_Selection.xaml" />
                <mui:Link DisplayName="COLOR PICKER" Source="/Pages/Control/Color_Picker.xaml" />
                <mui:Link DisplayName="COLOR SELECTION" Source="/Pages/Control/Color_Selection.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
